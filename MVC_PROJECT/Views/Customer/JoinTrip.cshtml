@model MVC_PROJECT.Models.Customers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>join-trip</title>
    <link rel="stylesheet" href="~/bootstrap 4/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/bootstrap 4/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/style-form.css">

</head>
<body>

    <div class="form jointravel">
        <h3 class="text-center"> Join Now </h3>
        <p class="text-center"> What are you waiting for? Join now </p>
            <form action="" method="POST">
                <div class="form-group">
                    <input type="hidden" name="ID_Customer" />
                    <label> First name </label>
                    <input type="text" class="form-control" id="name" name="UserNameC" placeholder="User Name" maxlength="12" onkeyup="allLetter(this)" required>
                </div>

                @*<div class="form-group">
                    <label> Last name </label>
                    <input type="text" class="form-control" id="name" name="Last_NameC" placeholder="Last Name" maxlength="12" onkeyup="allLetter(this)" required>
                </div>*@

                <div class="form-group">
                    <label> Email </label>
                    <input type="email" class="form-control" id="Email" name="EmailCustomer" placeholder="Your Email" required>
                </div>

                <div class="form-group">
                    <label> Mobile Phone </label>
                    <input type="text" class="form-control" id="num" name="MobilePhoneC" maxlength="10" placeholder="Your Number" required>
                </div>
               <input type="hidden" name="" value="" />
                <button type="submit" class="btn btn-info"> Join </button>
            </form>

        @*@if (ViewBag.Message != null)
        {
            <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }*@

    </div>


    <script src="~/bootstrap 4/js/jquery-3.5.1.js"></script>
    <script src="~/bootstrap 4/js/bootstrap.min.js"></script>
    <script src="~/bootstrap 4/js/popper.min.js"></script>
    <script src="~/Scripts/validation.js"></script>


</body>
</html>
