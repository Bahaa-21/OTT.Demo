
@model IEnumerable<MVC_PROJECT.Models.Trips>
@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Trip</title>
    <link rel="stylesheet" href="~/bootstrap 4/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/bootstrap 4/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/style-organizing.css">
    <link rel="stylesheet" href="~/Content/slider.css">
    <style>
        div.content {
            margin-left: 240px;
        }
    </style>

</head>
<body>

    <div class="sidebar">
        <div class="image">
            <img src="~/image/cute cartoon portrait.jpg" alt="">
            <h6> Sham al-laham </h6>
        </div>
        <a href="@Url.Action("Index","Home")"> <i class="fa fa-home fa-x2"></i> Home</a>
        <a href="@Url.Action("HomeOrganizing","Organizing")">Orgnaizing</a>
        <a class="active" href="@Url.Action("MyTrip","Organizing")"> My Trip </a>
        <a href="@Url.Action("AddTrip","Organizing")">Add Travel</a>
        <a href="@Url.Action("DeniedTrips","Organizing")"> Denied trips </a>


        <ul class="list-unstyled">
            <li> <i class="fa fa-facebook fa-lg"></i> </li>
            <li> <i class="fa fa-whatsapp fa-lg"></i> </li>
            <li> <i class="fa fa-telegram fa-lg"></i> </li>
        </ul>

    </div>

    <div class="content">
                <div class="container organizing">
                    <div class="row My-travel">
                        @foreach (var item in Model)
                        {
                            if (item.ID_Organizer == (int)Session["UserId"])
                            {
                                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                    <div class="card">
                                        <img src="../image/output-onlinejpgtools (1).jpg" alt="">
                                        <div class="card-body">
                                            
                                            <p>@item.Descripition</p>
                                        </div>
                                        <div class="card-footer">
                                            <button type="button" class="btn btn-danger"><a href="@Url.Action("InfoCustomer","Organizing" , new {id=item.ID_Trip })"> Customer Info </a></button>
                                            <button type="button" class="btn btn-danger"><a href="@Url.Action("InfoTripOrg","Organizing",new {id=item.ID_Trip})"> Info Travel </a></button>
                                            <br>
                                            <a href="@Url.Action("EditTravel","Organizing",new {id=item.ID_Trip})"><button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#edittravil">Edit</button></a>
                                           
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>
            </div>
   
    <script src="~/bootstrap 4/js/jquery-3.5.1.js"></script>
    <script src="~/bootstrap 4/js/bootstrap.min.js"></script>
    <script src="~/bootstrap 4/js/popper.min.js"></script>
    <script src="~/Scripts/validation.js"></script>
    <script>
        $(document).ready(function () {
            $('#Button1').on('click', function () {
                var number = $('#number');
                number += 1;
                $('#Container').clone().appendTo("#new-Station");
            });

            $('#Button1').on('click', function () {
                $("#new-Station").fadeIn();
            });

        });
        $('#form-b').click(function () {
            $('#editInfo').submit();
        });
    </script>


</body>
</html>

