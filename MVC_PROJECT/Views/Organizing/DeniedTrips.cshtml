@model IEnumerable<MVC_PROJECT.Models.RefuseTrip>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Denied Travel</title>
    <link rel="stylesheet" href="~/bootstrap 4/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/bootstrap 4/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/style-form.css">
    <link rel="stylesheet" href="~/Content/style-organizing.css">
    <link rel="stylesheet" href="~/Content/slider.css">
    <style>
        div.content {
            margin-left: 240px;
        }
    </style>
</head>
<body>


    <div class="sidebar">
        <div class="image">
            <img src="~/image/cute cartoon portrait.jpg" alt="">
            <h6> Shamin </h6>
        </div>
        <a href="@Url.Action("Index","Home")"> <i class="fa fa-home fa-x2"></i> Home</a>
        <a href="@Url.Action("HomeOrganizing","Organizing")"> Orgnaizing</a>
        <a href="@Url.Action("AddTrip","Organizing")">Add Trip</a>
        <a href="@Url.Action("DeniedTrips","Organizing")" class="active"> Denied Trips</a>
        <ul class="list-unstyled">
            <li> <i class="fa fa-facebook fa-lg"></i> </li>
            <li> <i class="fa fa-whatsapp fa-lg"></i> </li>
            <li> <i class="fa fa-telegram fa-lg"></i> </li>
        </ul>
    </div>

    <div class="content">
        <div class="container organizing">
            <div class="row My-travel">
                @foreach (var item in Model)
                {
                    
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="form-group">
                                        <textarea class="form-control">@item.reason_refuse</textarea>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="@Url.Action("Delete","Organizing",new {id=item.ID_Refuse})"><button class="btn btn-info" type="submit">DELETE</button></a>
                                </div>
                            </div>
                        </div>
                }
            </div>
        </div>
    </div>







    <script src="~/bootstrap 4/js/jquery-3.5.1.js"></script>
    <script src="~/bootstrap 4/js/bootstrap.min.js"></script>
    <script src="~/bootstrap 4/js/popper.min.js"></script>
    <script src="~/Scripts/validation.js"></script>
    <script>

    </script>


</body>
</html>