
@model MVC_PROJECT.Models.Organizing
@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home page</title>
    <link rel="stylesheet" href="~/bootstrap 4/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/bootstrap 4/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/style-organizing.css">
    <link rel="stylesheet" href="~/Content/slider.css">
    <style>
        div.content {
            margin-left: 240px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="image">
            <img src="~/image/cute cartoon portrait.jpg" alt="">
            <h6> Sham al-laham </h6>
        </div>
        <a href="@Url.Action("Index","Home")"> <i class="fa fa-home fa-x2"></i> Home</a>
        <a class="active" href="@Url.Action("HomeOrganizing","Organizing")">Orgnaizing</a>
        <a href="@Url.Action("MyTrip","Organizing")"> My Trip </a>
        <a href="@Url.Action("AddTrip","Organizing")">Add Travel</a>
        <a href="@Url.Action("DeniedTrips","Organizing")"> Denied trips </a>


        <ul class="list-unstyled">
            <li> <i class="fa fa-facebook fa-lg"></i> </li>
            <li> <i class="fa fa-whatsapp fa-lg"></i> </li>
            <li> <i class="fa fa-telegram fa-lg"></i> </li>
        </ul>

    </div>

    <div class="content">
    
        <form method="post">
            <div class="form-group">
                <label for="Username"></label>
                <input type="text" class="form-control form-control-sm" placeholder="User Name" name="UserNameOrg">
            </div>
            @*<div class="form-group">
                <label for="Username">Email</label>
                <input type="email" class="form-control form-control-sm" placeholder="Email" name="EmailOrg">
            </div>*@
            <div class="form-group">
                <label for="Username">PassWord</label>
                <input type="password" class="form-control form-control-sm" placeholder="Password" name="PasswordOrg">
            </div>
            <div class="form-group">
                <label for="Username">Confing Password</label>
                <input type="password" class="form-control form-control-sm" placeholder="Confing Password" name="RePassword">
            </div>
            <div class="form-group">
                <label for="Username">Number</label>
                <input type="text" class="form-control form-control-sm" placeholder="Number" name="MobilePhoneOrg">
            </div>
            <div class="form-group">
                <label for="Username">Location</label>
                <input type="text" class="form-control form-control-sm" placeholder="Address" name="Address">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger"> Edit </button>
            </div>
            <input type="hidden" name="ID_Organizer" value="@Model.ID_Organizer" />
        </form>


    </div>

    <script src="~/bootstrap 4/js/jquery-3.5.1.js"></script>
    <script src="~/bootstrap 4/js/bootstrap.min.js"></script>
    <script src="~/bootstrap 4/js/popper.min.js"></script>
    <script src="~/Scripts/validation.js"></script>
</body>
</html>