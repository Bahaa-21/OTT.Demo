    color: #fff;
    background-color: rgb(255, 58, 58);
    padding: 10px 10px;
    transition: all 0.4s ease-in;
}
.Travel .card-footer .book-now:hover{
    color: rgb(255, 58, 58);
    background-color: #fff;
    padding: 10px 10px;
}
